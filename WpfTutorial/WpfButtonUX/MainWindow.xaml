<Window x:Class="WpfButtonUX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfButtonUX"
        mc:Ignorable="d"
        Title="MainWindow" Height="286.5" Width="800">
    <Window.Resources>

        <ControlTemplate x:Key="ButtonLogin" TargetType="{x:Type Button}">
            <Grid>
                <Rectangle x:Name="Main" Margin="0">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/LOGIN.png"/>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="Text" Margin="0" Opacity="0">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/LOGIN_TEXT.png"/>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="Sel" Margin="0" Fill="#19FFFFFF" Opacity="0"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" TargetName="Sel" Value="1"/>
                    <Setter Property="Opacity" TargetName="Text" Value="1"/>
                    <Setter Property="Opacity" TargetName="Main" Value="0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" TargetName="Main" Value="0"/>
                    <Setter Property="Opacity" TargetName="Text" Value="1"/>
                    <Setter Property="Opacity" TargetName="Sel" Value="1"/>
                    <Setter Property="Fill" TargetName="Sel" Value="#4CFFFFFF"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="ButtonMode" TargetType="{x:Type Button}">
            <Grid>
                <Rectangle x:Name="Main" Margin="0">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/CONCENTRATE.png"/>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="Text" Margin="0" Opacity="0">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/CONCENTRATE_TEXT.png"/>
                    </Rectangle.Fill>

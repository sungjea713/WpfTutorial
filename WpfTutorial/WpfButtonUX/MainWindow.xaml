            </ControlTemplate.Triggers>
        </ControlTemplate>
        <ControlTemplate x:Key="ButtonHelp" TargetType="{x:Type Button}">
            <Grid>
                <Rectangle x:Name="Main" Margin="0">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="Images/HELP.png"/>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle x:Name="Text" Margin="0" Opacity="0">

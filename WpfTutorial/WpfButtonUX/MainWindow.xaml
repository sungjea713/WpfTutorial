                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Opacity" TargetName="Main" Value="0"/>
                    <Setter Property="Opacity" TargetName="Text" Value="1"/>
                    <Setter Property="Opacity" TargetName="Sel" Value="1"/>
                    <Setter Property="Fill" TargetName="Sel" Value="#4CFFFFFF"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </Window.Resources>
    <Grid>
        <Rectangle Margin="0,0,0,0">
            <Rectangle.Fill>
                <ImageBrush ImageSource="Images/BACKGROUND.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Button x:Name="button" Content="Button" Margin="208.167,105,0,0" Height="75" VerticalAlignment="Top" Template="{DynamicResource ButtonLogin}" HorizontalAlignment="Left" Width="75" d:LayoutOverrides="VerticalAlignment"/>
        <Button x:Name="button_Copy" Content="Button" Margin="17.667,20.5,0,0" Height="175.5" VerticalAlignment="Top" Template="{DynamicResource ButtonLogin}" HorizontalAlignment="Left" Width="175.5" d:LayoutOverrides="VerticalAlignment"/>
        <Button x:Name="button_Copy1" Content="Button" Margin="306.167,105,0,0" Height="75" VerticalAlignment="Top" Template="{DynamicResource ButtonMode}" HorizontalAlignment="Left" Width="75" d:LayoutOverrides="VerticalAlignment"/>
        <Button x:Name="button_Copy2" Content="Button" Margin="0,105,318.833,0" Height="75" VerticalAlignment="Top" Template="{DynamicResource ButtonPause}" d:LayoutOverrides="VerticalAlignment" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="button_Copy3" Content="Button" Margin="0,105,227.833,0" Height="75" VerticalAlignment="Top" Template="{DynamicResource ButtonSetting}" HorizontalAlignment="Right" Width="75" d:LayoutOverrides="VerticalAlignment"/>
        <Button x:Name="button_Copy4" Content="Button" Margin="0,105,138.833,0" Height="75" VerticalAlignment="Top" Template="{DynamicResource ButtonInfo}" HorizontalAlignment="Right" Width="75" d:LayoutOverrides="VerticalAlignment"/>
        <Button x:Name="button_Copy5" Content="Button" Margin="0,104.333,53.496,0" Height="75" VerticalAlignment="Top" Template="{DynamicResource ButtonHelp}" HorizontalAlignment="Right" Width="75" d:LayoutOverrides="VerticalAlignment"/>

    </Grid>
</Window>
